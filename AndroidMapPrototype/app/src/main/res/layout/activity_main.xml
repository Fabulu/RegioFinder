        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnZoomOut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="ï¼" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMyLocation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
